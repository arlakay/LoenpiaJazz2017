        <activity android:name=".ui.recommender.RecommenderActivity"
            android:label="Recommender"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".ui.news.NewsTabsActivity"
            android:label="News"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".ui.schedule.ScheduleTabsActivity"
            android:label="Schedule"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".ui.photobooth.PhotoboothTabsActivity"
            android:label="Photobooth"
